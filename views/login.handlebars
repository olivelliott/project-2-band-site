<div class="wrapper center mx-auto">
    <form class="login-form card col-lg-6 center align-items-center mx-auto p-5 mt-5">
        <h2 class="mb-5 text-center">login with an existing account</h2>
        <div>
            <label for="email-login">email:</label>
            <input type="text" id="email-login" />
        </div>
        <div>
            <label for="password-login">password:</label>
            <input type="password" id="password-login" />
        </div>
        <div>
            <button type="submit" class="btn mt-4">login</button>
        </div>
    </form>

    <form class="signup-form card col-lg-6 center align-items-center mx-auto p-5 mt-5">
        <h2 class="mb-5 text-center">create an account</h2>
        <div>
            <label for="username-signup">username:</label>
            <input type="text" id="username-signup" />
        </div>
        <div>
            <label for="email-signup">email:</label>
            <input type="text" id="email-signup" />
        </div>
        <div>
            <label for="instagram-signup">instagram:</label>
            <input type="text" id="instagram-signup" />
        </div>
        <div>
            <label for="facebook-signup">facebook:</label>
            <input type="text" id="facebook-signup" />
        </div>
        <div>
            <label for="password-signup">password:</label>
            <input type="password" id="password-signup" />
        </div>
        <div>
            <button type="submit" class="btn mt-4">signup</button>
        </div>
    </form>
</div>

<script src="/javascript/login.js"></script>