<h1 class="text-center mb-5">upcoming shows</h1>

<div class="wrapper row align-items-center">
    {{#each show as |show|}}
        <div class="card col-sm-4 col-lg-3 text-center m-5 p-5" id="show-content">
            <a href="{{show_link}}" target="_blank" class="text-decoration-none">
                <div class="card-title">
                    <h1>{{venue}}</h1>
                </div>
                <div class="card-content">
                    <p>{{show_date}}</p>
                </div>
            </a>
        </div>
    {{/each}}
</div>
